%h2.pickup-head
  ピックアップカテゴリー
  %h3.items__pickup__container
    = link_to "" ,class: "items__pickup__container__category" do
      = "#{@category1.name} 新着アイテム"
  %section.item-boxs.clearfix
    -@items.each do |item|
      %li.item-box
        = link_to "/items/#{item.id}" do
          %figure.item-box__figure
            / 商品の一枚目の写真を表示
            = image_tag item.item_images[0].image, alt: "",class: "item-box__image"
          .item-box__body
            .item-box__text
              .item-box__name
                =item.name
            .item-box__num
              .item-box__num__price
                = item.price
                .nice
                  = fa_icon "heart", type: :regular, class: "icon-like-border"
                  %span
                    1
              %p.item-box__num__price-tax
                (税込)
    .view-all
      = link_to "すべての商品を見る", root_path
