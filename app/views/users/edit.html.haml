.main_header
  = render 'shared/header'
  / - breadcrumb :user
  / = breadcrumbs pretext: " ", separator: " › "
%section.pickup-container
  .mypage-body.clearfix
    = render 'shared/user-side'
    .main__content
      %section.l-chapter-container
        %h2.l-chapter-head
          本人情報の登録
        .l-single-inner
          = form_for(current_user) do |f|
            .text
              %p
                お客さまの本人情報をご登録ください。
                %br>/
                登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
              %p.text-right
                = link_to '本人確認書類のアップロードについて＞', 'https://www.mercari.com/jp/help_center/article/495/'

            .form-group
              =f.label :お名前
              %span.form-require 必須
              = f.text_field :family_name_kanji, class: "input__default", placeholder: "例）横倉"
              = f.text_field :first_name_kanji, class: "input__default", placeholder: "例）達也"

            .form-group
              =f.label :お名前カナ
              %span.form-require 必須
              = f.text_field :family_name_kana, class: "input__default", placeholder: "例）ヨコクラ"
              = f.text_field :first_name_kana, class: "input__default", placeholder: "例）タツヤ"

            .form-group
              =f.label :生年月日
              %span.form-require 必須
              %br>/
              .birth-select-wrap
                .select-wrap
                  .select-box
                    = f.select :birth_year,[*(1900..2018)]
                %p
                  年
                .select-wrap
                  .select-box
                    = f.select :birth_month,[*(1..12)]
                %p
                  月
                .select-wrap
                  .select-box
                    = f.select :birth_day,[*(1..31)]
                %p
                  日
              %p.form-info-text ※出品されたことがある、本人情報未登録のお客さまもご対象となります。
              .clearfix

            .form-group
              =f.label :郵便番号
              %span.form-arbitrary 任意
              = f.text_field :zip_code, class: "input__default", placeholder: "例）1500043"

            .form-group
              =f.label :都道府県
              %span.form-arbitrary 任意
              %br>/
              .prefecture-select-wrap
                .select-wrap
                  .select-box
                    = f.select :prefecture, ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","東京都","神奈川県","埼玉県","千葉県","茨城県","栃木県","群馬県","山梨県","新潟県","長野県","富山県","石川県","福井県","愛知県","岐阜県","静岡県","三重県","大阪府","兵庫県","京都府","滋賀県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"]
              .clearfix
            .form-group
              =f.label :市町村
              %span.form-arbitrary 任意
              = f.text_field :city, class: "input__default", placeholder: "例）横浜市緑区"

            .form-group
              =f.label :番地
              %span.form-arbitrary 任意
              = f.text_field :address1, class: "input__default", placeholder: "例）道玄坂1-1-1"

            .form-group
              =f.label :建物名
              %span.form-arbitrary 任意
              = f.text_field :address2, class: "input__default", placeholder: "例）フォンティスビル701"

              .update-box
                = f.submit "登録する", class:"update-box-btn"
              .info-text-right
                %p
                  = link_to '本人情報の登録について＞','https://www.mercari.com/jp/help_center/article/423/'

= render 'shared/footer'
= render 'shared/sell-button'

