.main_header
  = render 'shared/header'
  - breadcrumb :user_card
  = breadcrumbs pretext: " ", separator: " › "
%section.pickup-container
  .mypage-body.clearfix
    = render 'shared/user-side'

    .credit__registration
      %h2.chapter__header クレジットカード情報入力
      .signup__inner
        .signup__inner__container
          .signup__inner__group
            = form_tag(pay_credits_path, method: :post, id: 'charge-form',  name: "inputForm") do
              .pay-input
                %label.text カード番号
                %span.form 必須
                = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                %ul.pay-input_img
                  %li.pay
                    = image_tag("visa.svg", class: "card--image", width: "49")
                  %li.pay
                    = image_tag("master-card.svg", class: "card--image", width: "34")
                  %li.pay
                    = image_tag("saison-card.svg", class: "card--image", width: "30")
                  %li.pay
                    = image_tag("jcb.svg", class: "card--image", width: "32")
                  %li.pay
                    = image_tag("american_express.svg", class: "card--image", width: "21")
                  %li.pay
                    = image_tag("dinersclub.svg", class: "card--image", width: "32")
                  %li.pay
                    = image_tag("discover.svg", class: "card--image", width: "32")
              .pay-num
                %label.text-limit 有効期限
                %span.form 必須
                %br
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                / %i.fas.fa-chevron-down
                .expire-month 月
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                .expire-year 年
                / %i.fas.fa-chevron-down
              .pay-code
                %label.text セキュリティコード
                %span.form 必須
                = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面4桁もしくは3桁番号", maxlength: "4", id: "cvc"
                .pay-code_text
                  ?
                %span.card
                  カード裏面の番号とは？
                #card_token
                = submit_tag "追加する",class: "btn-default btn-red", id: "token_submit"

  = render 'shared/footer'
  = render 'shared/sell-button'
